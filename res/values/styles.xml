<resources>

    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar" />
    
    <!-- 线条 -->
    <style name="horizonal_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dip</item>
        <item name="android:background">@color/grey</item>
    </style>
    
    <!-- 样式 -->
    <style name="rb_nor_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rb_bg_sel</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/rb_font_sel</item>
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:checked">false</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
    </style>
    
    <!-- 动画样式 -->
    <style name="popup_anim_style" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    
    <style name="popop_menu_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

</resources>
